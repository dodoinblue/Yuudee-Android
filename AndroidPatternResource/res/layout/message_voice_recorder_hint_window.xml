<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/voice_recorder_viewflipper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="bottom|center"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/voice_rcd_hint_bg"
        android:gravity="bottom|center"
        android:minWidth="160dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/voice_recorder_icon"
            android:layout_width="80dip"
            android:layout_height="120dip"
            android:src="@drawable/voice_rcd_hint" />

        <ImageView
            android:id="@+id/voice_rcd_hint_anim"
            android:layout_width="80dip"
            android:layout_height="120dip"
            android:layout_alignBottom="@id/voice_recorder_icon"
            android:layout_toRightOf="@id/voice_recorder_icon"
            android:background="@drawable/amp1" />

        <TextView
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/voice_recorder_icon"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:minHeight="40dip"
            android:text="@string/conversations_strings_slide_up_to_canceled"
            android:textColor="#FFFF"
            android:textSize="15dip" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/voice_rcd_hint_bg"
        android:gravity="center_horizontal"
        android:minWidth="160dip"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/voice_rcd_hint_cancel_icon"
            android:layout_width="160dip"
            android:layout_height="120dip"
            android:src="@drawable/rcd_cancel_icon" />

        <TextView
            android:id="@+id/voice_rcd_hint_cancel_text"
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/voice_rcd_hint_cancel_icon"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rcd_cancel_bg"
            android:gravity="center"
            android:minHeight="40dip"
            android:text="@string/conversations_strings_release_to_cancel"
            android:textColor="#FFFF"
            android:textSize="15dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/voice_rcd_hint_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="160dip"
            android:layout_height="120dip"
            android:src="@drawable/voice_to_short" />

        <TextView
            android:id="@+id/voice_rcd_result_text"
            android:layout_width="160dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="40dip"
            android:background="@drawable/rcd_cancel_bg"
            android:textColor="#FFFF"
            android:textSize="15dip" />
    </LinearLayout>

</ViewFlipper>