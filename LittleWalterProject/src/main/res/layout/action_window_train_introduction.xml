<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="70dp"
        android:paddingBottom="46dp"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:background="@mipmap/train_guide_page">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. 进入编辑状态\n按住屏幕左上、左下、右上、右下四个角中的任意三个便可以进入编辑界面。"
                    android:textSize="@dimen/parent_about_content_text_size"
                    android:textColor="@color/parent_about_content_text_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="2. 编辑图片\n进入编辑状态后点击图片右上角的图标便可以对每张图片进行编辑。对于不再需要的图片可以点击"
                    android:textSize="@dimen/parent_about_content_text_size"
                    android:textColor="@color/parent_about_content_text_color" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/about_train_introduction_window_quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:paddingRight="5dp"
            android:text="返回"
            android:textSize="12dp"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
