<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:paddingTop="120dp"
    android:paddingBottom="60dp"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:background="@mipmap/parent_add_card_bg">

    <TextView
        android:id="@+id/add_card_from_resource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/parent_add_card_libicon"
        android:drawablePadding="15dp"
        android:text="从素材库里添加"
        android:textSize="18dp"
        android:padding="20dp"
        android:clickable="true"
        android:onClick="onClick"
        android:textColor="#A52A2A"
        android:gravity="left|center_vertical"
        android:background="@mipmap/parent_add_card_paper"/>

    <TextView
        android:id="@+id/create_a_new_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/parent_add_card_createicon"
        android:drawablePadding="15dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:onClick="onClick"
        android:text="自制一张卡片"
        android:textSize="18dp"
        android:padding="20dp"
        android:textColor="#A52A2A"
        android:gravity="left|center_vertical"
        android:background="@mipmap/parent_add_card_paper"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginTop="15dp"
        android:background="@drawable/parent_editpop_cancel" />
</LinearLayout>
